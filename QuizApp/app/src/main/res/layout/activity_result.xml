<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.ResultActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is the analysis:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/solution1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/result"/>

    <TextView
        android:id="@+id/solution2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solution1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp" />
    <TextView
        android:id="@+id/solution3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/solution2"/>

    <TextView
        android:id="@+id/solution4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solution3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/solution5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solution4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solution5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="clickBack"
        android:text="Back" />

</RelativeLayout>
